<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style2.css' />
    <link rel='stylesheet' href='/stylesheets/style3.css' />
    <div>
      <form action="/apiships/consultaNavio" method="get" role="form">
          <div class="row">
              <div>
                  <input type="text" name="nome" placeholder="nome" class="form-control" required/>
              </div>
              <div>
                  <button type="submit" class="btn btn-default">pesquisar</button>
              </div>
          </div>
      </form>
    </div>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="login-box">
      <form action="/apiships/ISHIP/" method="post" role="form">
          <div class="row">
              <div class="user-box">
                  <input type="text" name="nome" placeholder="nome" class="form-control" required/>
              </div>
              <div class="user-box">
                <input type="number" name="ano" placeholder="ano" class="form-control" required/>
              </div>
              <div class="user-box">
                <input type="text" name="estaleiro" placeholder="estaleiro" class="form-control" required/>
              </div>
              <div class="user-box">
                  <button type="submit" class="btn btn-default">Incluir</button>
              </div>
          </div>
      </form>
    </div>
    <div class="tbl-header">
      <table class="table table-bordered table-striped">
        <thead><tr>
          <th>NOME</th>
          <th>ANO</th>
          <th>ESTALEIRO</th>
          <th>EXCLUIR</th>
        </tr>
        </thead>
      </table>
    </div>
        
    <div class="tbl-content">
      <table>
        <tbody>
            <% Gships.forEach(function(gunship, index) { %>
              <tr>
                <td><a href="/apiships/USHIP/<%= gunship._id %>">
                  <%- gunship.nome %>
                </a></td>
                <td><%- gunship.ano %></td>
                <td><%- gunship.estaleiro %></td>   
                <td><a href="/apiships/DSHIP/<%= gunship._id %>" 
                  onclick="return confirm('Tem certeza que deseja excluir?');">
                  X
                </a></td>        
              </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
    <div>
      <a href="index">MENU</a>
    </div>
  </body>
</html>
