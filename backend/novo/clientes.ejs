<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="col-xs-12">
      <form action="/clientes" method="post" role="form">
          <div class="row">
              <div class="col-xs-4">
                  <input type="text" name="cpf" placeholder="cpf" class="form-control"/>
              </div>
              <div class="col-xs-4">
                  <input type="text" name="nome" placeholder="nome" class="form-control"/>
              </div>
              <div class="col-xs-4">
                <input type="text" name="cep" placeholder="cep" class="form-control"/>
              </div>              
            <div class="col-xs-4">
              <button type="submit" class="btn btn-default">Incluir</button>
            </div>
          </div>
      </form>
  </div>

    <table class="table table-bordered table-striped">
      <thead><tr>
          <th>CPF</th>
          <th>Nome</th>
          <th>CEP</th>
      </tr>
      </thead>
      
      <tbody>
          <% clientes.forEach(function(cliente, index) { %>
            <tr>
              <td><%- cliente.cpf %></td>
              <td><%- cliente.nome %></td>
              <td><%- cliente.cep %></td>
              <td><a href="/clientes/delete/<%= cliente._id %>" 
                onclick="return confirm('Tem certeza que deseja excluir?');">
                X
              </a></td>              
            </tr>
          <% }) %>
      </tbody>
      
      
  </table>

  </body>
</html>
